{
  "inputs": [
    {
      "type": "promptString",
      "id": "consoleapp-project-path",
      "description": "The absolute path to the console app project Directory"
    }
  ],
  "servers": {
    "awesome-copilot": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${input:consoleapp-project-path}"
      ]
    }
  }
}
