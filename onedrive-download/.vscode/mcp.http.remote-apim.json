{
  "inputs": [
    {
      "type": "promptString",
      "id": "apim-fqdn",
      "description": "Azure API Management FQDN"
    }
  ],
  "servers": {
    "onedrive-download": {
      "type": "http",
      "url": "https://${input:apim-fqdn}/mcp",
      "env": {
        "AZD_AUTH_TOKEN": "azd auth token"
      },
      "auth": {
        "type": "bearer",
        "token": "${env:AZD_AUTH_TOKEN}"
      }
    }
  }
}
