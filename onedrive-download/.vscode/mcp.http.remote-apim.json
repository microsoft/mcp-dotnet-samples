{
  "inputs": [
    {
      "type": "promptString",
      "id": "apim-fqdn",
      "description": "Azure API Management FQDN"
    }
  ],
  "servers": {
    "onedrive-download": {
      "type": "http",
      "url": "https://${input:apim-fqdn}/mcp",
      "auth": {
        "type": "bearer",
        "token": "${command:getAzureAuthToken}",
        "scopes": ["https://graph.microsoft.com/.default"]
      }
    }
  }
}
