{
  "inputs": [
    {
      "type": "promptString",
      "id": "functionAppFqdn",
      "description": "Azure 함수 앱의 FQDN을 입력하세요 (예: func-onedrive-download-34ugypgdcsh76.azurewebsites.net)"
    }
  ],
  "servers": {
    "onedrive-download": {
      "type": "http",
      "url": "https://${input:functionAppFqdn}/mcp",
      "env": {
        "AZD_AUTH_TOKEN": "azd auth token"
      },
      "auth": {
        "type": "bearer",
        "token": "${env:AZD_AUTH_TOKEN}"
      }
    }
  }
}
