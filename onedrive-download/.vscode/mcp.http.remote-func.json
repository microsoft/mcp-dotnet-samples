{
  "inputs": [
    {
      "type": "promptString",
      "id": "functionAppFqdn",
      "description": "Azure 함수 앱의 FQDN을 입력하세요 (예: func-onedrive-download-34ugypgdcsh76.azurewebsites.net)"
    }
  ],
  "servers": {
    "onedrive-download": {
      "type": "http",
      "url": "https://${input:functionAppFqdn}/mcp",
      "auth": {
        "type": "bearer",
        "token": "${command:getAzureAuthToken}",
        "scopes": ["https://graph.microsoft.com/.default"]
      }
    }
  }
}
