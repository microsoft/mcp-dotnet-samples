{
  "inputs": [
    {
      "type": "promptString",
      "id": "funcapp-server-fqdn",
      "description": "Azure Functions FQDN"
    },
    {
      "type": "promptString",
      "id": "funcapp-key",
      "description": "Azure Functions Key",
      "password": true
    }
  ],
  "servers": {
    "outlook-email": {
      "type": "http",
      "url": "https://${input:funcapp-server-fqdn}/mcp",
      "headers": {
        "x-functions-key": "${input:funcapp-key}"
      }
    }
  }
}
