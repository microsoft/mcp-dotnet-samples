{
  "inputs": [
    {
      "type": "promptString",
      "id": "tenant-id",
      "description": "The tenant ID for Entra ID"
    },
    {
      "type": "promptString",
      "id": "client-id",
      "description": "The client ID for Entra ID"
    },
    {
      "type": "promptString",
      "id": "client-secret",
      "description": "The client secret for Entra ID",
      "password": true
    }
  ],
  "servers": {
    "outlook-email": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "ghcr.io/microsoft/mcp-dotnet-samples/outlook-email:latest",
        "--tenant-id",
        "${input:tenant-id}",
        "--client-id",
        "${input:client-id}",
        "--client-secret",
        "${input:client-secret}"
      ]
    }
  }
}
