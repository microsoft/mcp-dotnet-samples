{
  "inputs": [
    {
      "type": "promptString",
      "id": "consoleapp-project-path",
      "description": "The absolute path to the console app project Directory"
    },
    {
      "type": "promptString",
      "id": "tenant-id",
      "description": "The tenant ID for Entra ID"
    },
    {
      "type": "promptString",
      "id": "client-id",
      "description": "The client ID for Entra ID"
    },
    {
      "type": "promptString",
      "id": "client-secret",
      "description": "The client secret for Entra ID",
      "password": true
    }
  ],
  "servers": {
    "outlook-email": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${input:consoleapp-project-path}",
        "--",
        "--tenant-id",
        "${input:tenant-id}",
        "--client-id",
        "${input:client-id}",
        "--client-secret",
        "${input:client-secret}"
      ]
    }
  }
}
