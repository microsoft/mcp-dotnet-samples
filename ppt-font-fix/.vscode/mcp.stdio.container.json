{
  "inputs": [
    {
      "type": "promptString",
      "id": "your-ppt-file-path",
      "description": "The absolute path where the PPT file you want to modify is located"
    }
  ],
  "servers": {
    "ppt-font-fix": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name", "ppt-font-fix",
        "-v", "${input:your-ppt-file-path}:/files",
        "ppt-font-fix:latest"
      ]
    }
  }
}