{
  "inputs": [
    {
      "type": "promptString",
      "id": "repository-root",
      "description": "Enter the absolute path to the repository root directory (where 'openapi-to-sdk' folder is located)."
    }
  ],
  "servers": {
    "openapi-to-sdk": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "${input:repository-root}/workspace:/app/workspace",
        "-e",
        "HOST_ROOT_PATH=${input:repository-root}",
        "openapi-to-sdk:latest"
      ]
    }
  }
}