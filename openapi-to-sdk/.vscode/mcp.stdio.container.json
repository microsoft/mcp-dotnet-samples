{
  "servers": {
    "openapi-to-sdk": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "$REPOSITORY_ROOT/openapi-to-sdk/workspace:/app/workspace",
        "-e",
        "HOST_ROOT_PATH=${env:REPOSITORY_ROOT}/openapi-to-sdk",
        "openapi-to-sdk:latest"
      ]
    }
  }
}